@KOJO_MESSAGE_PALAMCNG_A_K4518_OBEY
;-------------------------------------------------
;조교자의 사정시의 텍스트
;-------------------------------------------------
;-------------------------------------------------
;사정장소 변경시의 텍스트　유효시 여기서 함수 종료
;-------------------------------------------------
IF CFLAG:106
	CALL PALAM_MESSAGE_A
	;머리카락
	IF CFLAG:106 == 1
	;얼굴
	ELSEIF CFLAG:106 == 2
	;가슴
	ELSEIF CFLAG:106 == 3
	;배
	ELSEIF CFLAG:106 == 4
	;겨드랑이
	ELSEIF CFLAG:106 == 5
	;허벅지
	ELSEIF CFLAG:106 == 6
	;가랑이
	ELSEIF CFLAG:106 == 7
	;엉덩이
	ELSEIF CFLAG:106 == 8
	;콘돔
	ELSEIF CFLAG:106 == 9
		;섹스로 사정하고, 애널섹스 이외를 실행 시
		IF GROUPMATCH(SELECTCOM , 60 , 61 , 66 , 68 , 69 , 72)
		ELSE
		ENDIF
	ENDIF
	RETURN 0
ENDIF

